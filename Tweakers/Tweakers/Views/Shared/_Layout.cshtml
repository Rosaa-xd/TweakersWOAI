<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title - Tweakers</title>
    <link rel="stylesheet" href="../../Content/bootstrap.css"/>
    <link rel="stylesheet" href="../../Content/bootstrap-theme.css"/>
    <link rel="stylesheet" href="../../Content/GeneralStyle.css"/>
</head>
<body>
    <header>
        <div class="nav">
            <ul class="navbar">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("PriceWatch", "Pricewatch", "Category")</li>
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Wenslijst", "Wishlist", "UserList")</li>
                    <li>@Html.ActionLink("Inventaris", "Inventory", "UserList")</li>
                    <li>@Html.ActionLink("Uitloggen", "Logout", "User")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Inloggen", "Login", "User")</li>
                }
            </ul>
        </div>
    </header>
<div class="render_body_content">
    @RenderBody()
    <footer>
        <hr/>
        <p>&copy; @DateTime.Now.Year</p>
    </footer>
</div>
</body>
</html>

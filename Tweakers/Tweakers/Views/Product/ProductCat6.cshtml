@model List<Tweakers.Models.Product>

@{
    ViewBag.Title = "Gaming";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <p>Product</p>
                </th>
                <th>
                    <p>Review Score</p>
                </th>
                <th>
                    <p>Prijs</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count != 0)
            {
                foreach (var p in Model)
                {
                    <tr>
                        <td>
                            <p>@Html.ActionLink(p.Name + " " + p.SKU, "Product" + p.ID, new { id = p.ID })</p>
                        </td>
                        <td>
                            <p>Score: @p.AverageReviewScore</p>
                        </td>
                        <td>
                            <p>Prijs: @p.Price</p>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <h3>Sorry, er zijn nog geen producten beschikbaar binnen deze categorie :(</h3>
</div>

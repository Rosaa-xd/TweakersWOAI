@model List<Tweakers.Models.Category>

@{
    if (Model[0].ParentCategory == null)
    {
        ViewBag.Title = Model[0].Name;
    }
    else
    {
        ViewBag.Title = Model[0].ParentCategory.Name;
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div>
    <ul class="categories">
        @foreach (var c in Model)
            {
            <li>@Html.ActionLink(c.Name, "Cat", "Category", new {id = c.ID}, null)</li>
        }
    </ul>
</div>

